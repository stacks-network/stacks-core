{
    "compilerOptions": {
      "moduleResolution": "node",
      "target": "es2018",
      "module": "commonjs",
      "lib": ["es2018", "esnext.bigint"],
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "sourceMap": true,
      "declaration": true,
      "esModuleInterop": true,
      "outDir": "lib"
    },
    "include": [
      "src"
    ]
  }
